# Dockerfile for Banistmo Reprocessing Job
FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install ALL dependencies (including devDependencies for build)
RUN npm install

# Copy source code
COPY src/ ./src/
COPY scripts/ ./scripts/

# Set environment
ENV NODE_ENV=production
ENV GOOGLE_CLOUD_PROJECT=mail-reader-433802

# Run the reprocessing script with tsx (no build needed)
CMD ["npx", "tsx", "scripts/reprocess-banistmo-from-gmail.ts"]
